<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_list_profile_image"
        android:layout_width="@dimen/dim_70"
        android:layout_height="@dimen/dim_70"
        android:layout_margin="@dimen/dim_5"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteY="@dimen/dim_10"/>

    <TextView
        android:id="@+id/user_list_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dim_5"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/txt_dim_16"
        app:layout_constraintStart_toEndOf="@+id/user_list_profile_image"
        app:layout_constraintTop_toTopOf="@+id/user_list_profile_image" />

    <TextView
        android:id="@+id/user_list_descripton_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_8"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textSize="@dimen/txt_dim_14"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_margin="@dimen/dim_5"
        app:layout_constraintStart_toEndOf="@+id/user_list_profile_image"
        app:layout_constraintTop_toBottomOf="@id/user_list_name_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>